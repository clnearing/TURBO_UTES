<h1>TURBO UTES</h1>
<p>The best place to fulfil all your Ute rental needs</p>

<%# navbar with links to home, login/logout, create new user, user dashboard,  %>
<div class="row justify-content-start">
  <%= link_to 'Home', '/' %>
  <%= link_to 'Log In', '/users/sign_in' %>
  <%= link_to 'Sign Up', '/users/sign_up' %>
  <%= link_to 'Dashboard', '/dashboard' %>
  <%# <%= link_to 'Log Out', '/users/sign_out' %>
  <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete } %>
</div>

<div class="row justify-content-start">
    <div class="col-sm-8 my-3">
      <%= form_with url: utes_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Search for the ute of your dreams"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
</div>

<br>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="utes">
        <% if @utes.any? %>
          <% @utes.each do |ute| %>
          <div style="width:200px">
            <img src="<%= ute.image_url %>" style="width:100%">
          <div>
            <h3>$<%= ute.price %>/day <%= ute.location %></h3>
            <h4><b><%= ute.year %> <%= ute.model  %></b></h4>
          <%= link_to "Booking Info", ute_path(ute)%>
          <% end %>
        <% else %>
          <em>Sorry, no utes found.</em>
        <% end %>
      </div>
    </div>
  </div>
</div>
