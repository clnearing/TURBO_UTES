<h1>TURBO UTES</h1>
<p>The best place to fulfil all your Ute rental needs</p>

<%# navbar with links to home, login/logout, create new user, user dashboard,  %>
<div>
  <%= link_to 'Home', '/' %>
  <%= link_to 'Log In', '/users/sign_in' %>
  <%= link_to 'Sign Up', '/users/sign_up' %>
  <%= link_to 'Dashboard', '/dashboard' %>
  <%# <%= link_to 'Log Out', '/users/sign_out' %>
  <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete } %>
</div>

<div>
  <% @utes.each do |ute| %>
    <% if ute.availability? %>
      <div style="width:200px">
        <img src="<%= ute.image_url %>" style="width:100%">
        <div>
          <h3>$<%= ute.price %>/day <%= ute.location %></h3>
          <h4><b><%= ute.year %> <%= ute.model  %></b></h4>
          <%= link_to "Booking Info", ute_path(ute)%>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
